{% extends 'GJIBundle::index2.html.twig' %}
{% block body %}



            <div class="col col-login mx-auto">
              <div class="text-center mb-6" style="margin-top:25px">
                <img src="{{asset('bundles/gji/img/favicon.ico')}}" class="h-6" alt=""> <strong> GROUPJI </strong> 
              </div>


              {% if error %}
                <div  class="alertDiv alert alert-dismissible alert-danger"> <button type="button" class="close" data-dismiss="alert"></button> <p class="alert-heading" style="text-align: center"> Invalid Login or Password </p></div>
              {% endif %}
               

          <form id="loginForm" class="card" role="form" action="{{ path("fos_user_security_check") }}"  autocomplete="off" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}


                  <div class="card-body p-6">

                  <div class="card-title">Login to your account</div>
                  <div class="form-group">
                    <label class="form-label">Phone Number or Email</label>
                    <input type="text" class="form-control" name="_username"  id="username" aria-describedby="emailHelp" placeholder="Enter Phone Number" required="required"  value="{{ last_username }}">


                  </div>
                  <div class="form-group">
                    <label class="form-label">
                      Password
                      <a href="{{path('ForgetPassword')}}" class="float-right small">I forgot password</a>
                    </label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password" required="required">

                  </div>

                  <div class="form-group">
                    <label class="custom-control custom-checkbox">
                      <input type="checkbox" class="custom-control-input" />
                      <span class="custom-control-label">Remember me</span>
                    </label>
                  </div>

                  <div class="form-footer">


                  <div  class="loading2" style="width: 50px ; display:none; margin-top:25px;margin-right: auto;margin-left: auto;">

                      <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid" class="lds-rolling" style="background: none;"><circle cx="50" cy="50" fill="none" ng-attr-stroke='' ng-attr-stroke-width='' ng-attr-r="" ng-attr-stroke-dasharray='' stroke="#918784" stroke-width="10" r="35" stroke-dasharray="164.93361431346415 56.97787143782138" transform="rotate(172.193 50 50)"><animateTransform attributeName="transform" type="rotate" calcMode="linear" values="0 50 50;360 50 50" keyTimes="0;1" dur="1s" begin="0s" repeatCount="indefinite"></animateTransform></circle></svg>

                  </div>  


                    <div class="form-group">
                      <button type="submit" id="submitLogin" class="btn btn-teal btn-block">Sign in</button>
                    </div>


                    <div class="form-group">
                      <a href="https://groupji.com/FacebookLogin-master/login.php" class="btn btn-facebook btn-block"><i class="fa fa-facebook mr-2"></i>Sign in with Facebook</a>
                    </div>

                    {% set url1='https://www.googleapis.com/auth/userinfo.profile https://www.googleapis.com/auth/userinfo.email https://www.googleapis.com/auth/plus.me'|url_encode %}

                    {% set url2=CLIENT_REDIRECT_URL|url_encode %}

                    <div class="form-group">
                      <a href="https://accounts.google.com/o/oauth2/v2/auth?scope={{url1}}&redirect_uri={{url2}}&response_type=code&client_id={{CLIENT_ID}}&access_type=online" class="btn btn-google btn-block"><i class="fa fa-google mr-2"></i>Sign in with Google</a>
                    </div>

    

                  </div>
                </div>
              </form>
              <div class="text-center text-muted">
                Don't have account yet? <a href="{{path('fos_user_registration_register')}}">Sign up</a>
              </div>
            </div>




<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<script>


$("#submitLogin").click(function() {

  $('.loading2').show()

})



</script

{% endblock %}

