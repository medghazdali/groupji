    {% extends 'IstokIstokBundle::index.html.twig' %}
    {% block body %}


<h1>Listes facilites</h1><hr>

<div class="col-md-6">

<a class="btn btn-sm btn-primary" href="{{path('facilite_add')}}"><i class="glyphicon glyphicon-plus"></i> Ajouter facilite</a>

<table class="table table-bordered search-table" >
<thead> 
<tr>
<th>facilite</th>
<th>description</th>


</tr>
</thead> 

<tbody>
{% for facilite in facilites %}




<tr>
<td>{{facilite.facilite}}</td>
<td>{{facilite.description}}</td>

{% if(role[0])=='ROLE_SUPER_ADMIN' %}


<td>
<a class="btn btn-sm btn-warning" href="{{path('facilite_edit',{'id':facilite.id})}}" role="button">  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
<a class="btn btn-sm btn-danger" href="{{path('facilite_delete',{'id':facilite.id})}}" role="button">  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
</a>



</td>
{% endif %}

</tr>


{% endfor%}



</tbody>

</table>

</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
